<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ksong7060.stalk.MenuActivity">

    <include
        layout="@layout/toolbar_layout"
        android:id="@+id/toolbar"/>

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/main_logo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_people_black_100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp" />

            <TextView
                android:id="@+id/lbl_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group"
                android:textSize="20dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="30dp" />

            <ImageView
                android:id="@+id/schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_event_note_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@+id/group"/>

            <TextView
                android:id="@+id/lbl_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schecule"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@+id/lbl_group" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_contact_mail_black_24dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp" />

            <TextView
                android:id="@+id/lbl_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textSize="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp" />

            <ImageView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_announcement_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@+id/message"/>

            <TextView
                android:id="@+id/lbl_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/lbl_message" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

